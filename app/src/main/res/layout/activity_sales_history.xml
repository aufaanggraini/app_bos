<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.aufa.project.SalesHistoryActivity">

    <LinearLayout 
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.aufa.project.SalesHistoryActivity">

        <RelativeLayout
            android:padding="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/foto"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"/>


            <TextView
                android:id="@+id/txtNamaKaryawan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/txtEmail"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/txtEmail"
                android:text="TextView"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="27dp"
                tools:layout_editor_absoluteY="16dp" />

            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtNamaKaryawan"
                android:layout_toRightOf="@id/foto"
                android:text="TextView"
                android:layout_marginLeft="20dp"
                tools:layout_editor_absoluteX="27dp"
                tools:layout_editor_absoluteY="35dp" />


        </RelativeLayout>

        <TextView
            android:textColor="#000"
            android:text="Tugas-Tugas"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:background="#eee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#000"
            android:background="#eee"
            android:padding="15dp"
            android:id="@+id/tugasTugas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="20sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:background="#000"
            android:text="History Route"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imgPeta"
            android:background="#000"
            android:minWidth="300dp"
            android:layout_width="match_parent"
            android:layout_height="300dp" />
    </LinearLayout>
</ScrollView>
